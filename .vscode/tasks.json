{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Space Invaders",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/main.cpp",
                "-o",
                "${workspaceFolder}/space_invaders",
                "-lglfw",
                "-lGL",
                "-lGLEW",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
